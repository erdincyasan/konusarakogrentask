@using Application.Wrapper
@using Shared.Dtos.Exam
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}
@model PaginatedResult<ExamDetailDto>

    <div class="row">
       
        <table class="d-lg-table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Exam Title
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>
                            <a asp-action="ExamDetail" asp-route-id="@item.Id">
                                @item.ExamTitle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
