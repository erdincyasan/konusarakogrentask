@using Application.Wrapper
@using Shared.Dtos.Exam
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
}
@model PaginatedResult<ExamDetailDto>

    <div class="row">
       
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        Exam Title
                    </th>
                    <th scope="col">
                        Exam Date
                    </th>
                    <th scope="col">
                        Remove
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td scope="row">
                            <a asp-action="ExamDetail" asp-route-id="@item.Id">
                                @item.ExamTitle
                            </a>
                        </td>
                        <td>
                            @item.ExamDate
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Remove" asp-controller="Exam" asp-route-id="@item.Id">
            REMOVE
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
